{
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/nx/schemas/project-schema.json",
  "root": "apps/api",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "tags": ["type:app", "scope:api"],
  "targets": {
    "build": {
      "dependsOn": ["^build"],
      "executor": "nx:run-commands",
      "inputs": [
        "prod",
        "{projectRoot}/.swcrc",
        "{projectRoot}/tsconfig.build.json",
        "{workspaceRoot}/tsconfig.json"
      ],
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "cwd": "{projectRoot}",
        "commands": [
          "rm -rf dist",
          "swc src -d dist --ignore **/*.test.ts",
          "tsc -p tsconfig.build.json --composite false --emitDeclarationOnly",
          "npx tsc-alias -p tsconfig.build.json"
        ],
        "parallel": false
      }
    },
    "types": {
      "dependsOn": ["^build"],
      "executor": "nx:run-commands",
      "inputs": ["dev"],
      "options": {
        "cwd": "{projectRoot}",
        "command": "npx tsc -p tsconfig.test.json --noEmit"
      }
    },
    "lint": {
      "dependsOn": ["^build"],
      "executor": "nx:run-commands",
      "inputs": ["dev"],
      "options": {
        "cwd": "{projectRoot}",
        "command": "npx eslint ."
      }
    },
    "test": {
      "dependsOn": ["^build"],
      "executor": "nx:run-commands",
      "inputs": ["dev"],
      "options": {
        "cwd": "{projectRoot}",
        "command": "npx jest --group=-integration"
      }
    },
    "integration": {
      "dependsOn": ["^build"],
      "executor": "nx:run-commands",
      "inputs": ["dev"],
      "options": {
        "cwd": "{projectRoot}",
        "command": "npx jest --config=jest.config.integration.js --group=integration"
      }
    }
  }
}
